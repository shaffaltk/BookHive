@page "{id:int}"
@model BookHive.Pages.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this book?</h3>

<div>
    <h4>@Model.Book.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Book.Author</dd>
        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.Book.Genre</dd>
        <dt class="col-sm-2">Publication Year</dt>
        <dd class="col-sm-10">@Model.Book.PublicationYear</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Book.ID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>


